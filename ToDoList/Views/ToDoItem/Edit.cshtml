@model ToDoList.Application.ToDoItem.Commands.EditToDoItem.EditToDoItemCommand

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @Model.Name
    <button class="btn btn-info" onclick="goBack()">Back</button>
</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label class="control-label" asp-for="Date">Date</label>
                <input type="date" class="form-control" asp-for="Date" value="@Model.Date.ToString("yyyy-MM-dd")">
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div style="padding-left: 15px;">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <script src="~/js/site.js"></script>
    }
}

